<div class="container">

  <div class="row">
    <div class="col-lg-12" >
      <h1 class="text-center">Eat-Da-Burger</h1>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-6">
      <h3 class="text-center">Ready-to-eat burgers</h3>
        {{#each burger}}
          {{#unless devoured}}
            <button class="eat-burger" data-id="{{id}}">Devour it!</button>
            &nbsp;{{this.id}}) {{this.burger_name}}<br><br>
          {{/unless}}
        {{/each}}
    </div>
    
    <div class="col-lg-6 col-lg-offset-6">
        <h3 class="text-center">Devoured burgers</h3>

        <ul>
          {{#each burger}}
            {{#if devoured}}
              &nbsp;{{this.id}}) {{this.burger_name}}<br><br>
            {{/if}}
          {{/each}}
        </ul>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-12 text-center">
      <div class="gif-display">
      </div>
      <br>
      <h3>Add a Burger</h3>
      <form class="create-form">
        <div class="form-group">
          <label for="new-burger">Burger Name:</label>
          <input type="text" id="new-burger" burger_name="name">
        </div>
        <button type="submit">Add Burger</button>
      </form>
    </div>
  </div>