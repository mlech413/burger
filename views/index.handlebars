<div class="container">

  <div class="row">
    <div class="col-lg-12" >
      <h1 class="text-center"><strong>Eat-Da-Burger!!!</strong></h1>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-6">
      <h1 class="text-center">Ready-To-Eat Burgers</h1>
        {{#each burger}}
          {{#unless devoured}}
            <button class="eat-burger" data-id="{{id}}">Devour it!</button>
            &nbsp;{{this.id}}) {{this.burger_name}}<br>
          {{/unless}}
        {{/each}}
        <div class="gif-display">
          {{!-- Empty div to display gif of devoured burger --}}
      </div>
    </div>
    
    <div class="col-lg-6 col-lg-offset-6">
        <h1 class="text-center">Devoured Burgers</h1>

        <ul>
          {{#each burger}}
            {{#if devoured}}
              &nbsp;{{this.id}}) {{this.burger_name}}<br>
            {{/if}}
          {{/each}}
        </ul>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-12 text-center">
      <br>
      <h1>Add a Burger</h1>
      <form class="create-form">
        <div class="form-group">
          <label for="new-burger">Burger Name:</label>&nbsp;
          <input type="text" id="new-burger" burger_name="name">&nbsp;
          <button type="submit">Add Burger</button>
        </div>
      </form>
      
    </div>
  </div>